# Twitter API Credentials
# Get these from https://developer.twitter.com/en/portal/dashboard

# REQUIRED: Bearer Token (for reading public tweets)
TWITTER_BEARER_TOKEN=your_bearer_token_here

# OPTIONAL: Only needed if you want to access private data or post tweets
# TWITTER_API_KEY=your_api_key_here
# TWITTER_API_SECRET=your_api_secret_here
# TWITTER_ACCESS_TOKEN=your_access_token_here
# TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here

# OpenAI API Key (for Whisper transcription)
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: transcription quality controls
# Default model is a higher-quality one; if unavailable it will automatically fall back to whisper-1.
OPENAI_TRANSCRIBE_MODEL=
# Optional hint/prompt to improve Persian transcription quality, e.g.:
# OPENAI_TRANSCRIBE_PROMPT=این فایل صوتی فارسی است. لطفاً دقیق رونویسی کن و علائم نگارشی را درست بگذار.
OPENAI_TRANSCRIBE_PROMPT=
# Optional decoding temperature (lower is more deterministic), e.g. 0 or 0.2
OPENAI_TRANSCRIBE_TEMPERATURE=
# FFmpeg cleanup before upload (default true in code)
TRANSCRIBE_CLEAN_AUDIO=true
# Trim leading/trailing silence (default true in code)
TRANSCRIBE_TRIM_SILENCE=true
